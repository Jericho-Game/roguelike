{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "lib": ["es2019", "dom"],
    "jsx": "react-jsx",
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./jest-setup.ts",
    "src/**/*"
  ]
}
